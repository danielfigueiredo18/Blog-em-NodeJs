<%- include('../../partials/header.ejs') %>
<body>
    <%- include('../../partials/navbar.ejs') %><br>
    <div class="container">
        <div class="card">
            <div class="card-header">
                <h2>Editar Artigo</h2>
            </div>
            <div class="card-body">
               <form method="POST" action="/articles/update">
                <input name="id" type="hidden" value="<%=article.id%>">
                <input class="form-control mb-2" type="text" name="title" placeholder="Defina o tÃ­tulo do Artigo" value="<%=article.title%>">
                <textarea class="form-control mb-2" placeholder="Escreva o artigo aqui!" name="body" id="article"><%-article.body%></textarea>
                <label>Categorias</label>
                <select name="category" class="form-control">
                    <% categories.forEach((category)=>{ %>
                        <% if(category.id == article.categoryId){ %> 
                            <option value="<%= category.id %>" selected><%= category.title %></option>
                        <% }else{ %>
                            <option value="<%= category.id %>"><%= category.title %></option>
                        <% }%>
                        
                    <% }) %>
                </select>
                <br>
                <button class="btn btn-success" type="submit">Atualizar</button>
            </form> 
            </div>
            
        </div>
    </div> 
</body>

<%- include('../../partials/footer.ejs') %>
<script src="/lib/tinymce/tinymce.min.js"></script>
<script>
    tinymce.init({
        selector: "textarea#article",
        plugins: [
            'advlist autolink link image lists print preview hr searchreplace wordcount fullscreen insertdatetime media save table paste emoticons'
        ]
    })
</script>